import java.util.Scanner;

interface Sport {
    void Sport();
}

interface Marks {
    void Marks();
}
interface Extracurricular {
    void Extra();
}

class Student implements Sport, Marks, Extracurricular {
    final String collegeName = "Sanjivani University, Kopargaon";
    String name, div, branch, prn, sport, activity;
    int roll, awards, level;
    float marks, per, cgpa;
Scanner myObj = new Scanner(System.in);
    public void input() {
        System.out.print("Enter the student name: ");
        name = myObj.nextLine();
        System.out.print("Enter the student Div: ");
        div = myObj.nextLine();
        System.out.print("Enter the student branch: ");
        branch = myObj.nextLine();
        System.out.print("Enter the student PRN No: ");
        prn = myObj.nextLine();
        System.out.print("Enter the student Roll no: ");
        while (true) {
            try {
                roll = Integer.parseInt(myObj.nextLine());
                if (roll < 0) throw new IllegalArgumentException("Roll number cannot be negative!");
                break;
            } catch (Exception e) {
                System.out.println("Invalid roll number. Please enter again.");
            }
        }
    }

    public void Sport() {
        System.out.print("Enter the sport: ");
        sport = myObj.nextLine();
        System.out.print("Enter the number of awards won: ");
        awards = myObj.nextInt();
        myObj.nextLine(); 
    }

  
    public void Marks() {
        System.out.print("Enter the Total marks (out of 500): ");
        marks = myObj.nextFloat();
        per = (marks / 500) * 100;
        cgpa = per / 9.5f; 
        myObj.nextLine(); 
    }

    public void Extra() {
        System.out.print("Enter the extracurricular activity: ");
        activity = myObj.nextLine();
        System.out.print("Enter the level achieved (1=School, 2=District, 3=State, 4=National): ");
        level = myObj.nextInt();
        myObj.nextLine(); 
    }

    public void display() {
        System.out.println("\nName: " + name);
        System.out.println("Div: " + div);
        System.out.println("Branch: " + branch);
        System.out.println("College: " + collegeName);
        System.out.println("Roll No: " + roll);
        System.out.println("PRN No: " + prn);
        System.out.println("Sport: " + sport);
        System.out.println("Awards Won: " + awards);
        System.out.println("Marks Obtained: " + marks);
        System.out.println("Percentage: " + per);
        System.out.println("CGPA: " + cgpa);

        if (cgpa >= 9.0) {
            System.out.println("Performance: Excellent");
        } else if (cgpa >= 7.5) {
            System.out.println("Performance: Good");
        } else {
            System.out.println("Performance: Average");
        }

        System.out.println("Extracurricular Activity: " + activity);
        System.out.println("Level Achieved: " + 
            (level == 1 ? "School" : level == 2 ? "District" : level == 3 ? "State" : "National"));
    }
}

class Third {
    public static void main(String[] args) {
        Scanner myObj1 = new Scanner(System.in);
        Student[] students = new Student[10]; 
        int ch, n = 0,p=0;

        do {
            System.out.println("\n1. Insert Data \n2. Display Data\n3. Exit");
            System.out.print("Enter Your Choice: ");
            ch = myObj1.nextInt();
            myObj1.nextLine(); 
            switch (ch) {
                case 1:
                    System.out.print("No. of students you want to insert: ");
                    n = myObj1.nextInt();
                    myObj1.nextLine(); 

                    for (int i = 0; i < n; i++) {
                        students[i] = new Student();
                        System.out.println("\nEnter details for student " + (i + 1) + ":");
                        students[i].input();
                        
                        System.out.print("student from which field: 1.sport   2. marks   3.extracurricular\n enter your choice:");
                        p=myObj1.nextInt();
                        myObj1.nextLine(); 
                        if(p==1)
                        {
                        students[i].Sport();
                        }
                        else if(p==2)
                        {
                        students[i].Marks();
                        }
                        else
                        {
                        students[i].Extra();
}                    }
                    break;

                case 2:
                    if (n == 0) {
                        System.out.println("No student records found.");
                    } else {
                        for (int i = 0; i < n; i++) {
                            System.out.println("\nStudent " + (i + 1) + ":");
                            students[i].display();
                        }
                    }
                    break;

                case 3:
                    System.out.println("Exiting...");
                    break;

                default:
                    System.out.println("Wrong choice! Please enter again.");
            }
        } while (ch != 3);

        myObj1.close();
    }
}
